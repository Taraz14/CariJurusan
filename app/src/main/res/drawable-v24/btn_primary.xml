<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/colorPurple" />
            <gradient android:angle="-360"
                android:startColor="@color/colorPurple"
                android:centerColor="@color/colorPurple"
                android:endColor="@color/colorPurple"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#6C6C6F" />
            <solid android:color="#6C6C6F"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#6C6C6F" />
            <gradient android:angle="-360"
                android:startColor="@color/colorPurple"
                android:centerColor="@color/colorPurple"
                android:endColor="@color/colorPurple" />
        </shape>
    </item>
</selector>