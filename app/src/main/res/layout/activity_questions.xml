<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_background"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/back"
                android:tint="@color/colorAccent"
                android:src="@drawable/ic_back_to"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/soal"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#E6E6E6"
                android:text="Kimia"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/refresh"
                android:tint="@color/colorAccent"
                android:src="@drawable/ic_refrash"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/scrollText"
            android:scrollbars="vertical"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:textColor="#E6E6E6"
            android:text="Apakah reaksi kimia yang menjadi acuan Na3?"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:background="@drawable/trans_ontext"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">
                <LinearLayout
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="gone"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:text="1"
                        android:id="@+id/question_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/answer_a"
                        android:background="@drawable/btn_primary"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:textSize="16sp"
                        android:textColor="#A4A5A7"
                        android:textAllCaps="false"
                        android:text="Uh 7"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="60dp" />

                    <Button
                        android:id="@+id/answer_b"
                        android:background="@drawable/btn_primary"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="#A4A5A7"
                        android:textAllCaps="false"
                        android:text="UX 43"
                        android:layout_width="match_parent"
                        android:layout_height="60dp" />

                    <ListView
                        android:visibility="gone"
                        android:id="@+id/list_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


                </LinearLayout>
            </LinearLayout>
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/colorAnother"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/prev"
            android:padding="5dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/ic_prev"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#E6E6E6"
            android:text="Prev"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/next"
            android:padding="5dp"
            android:drawableRight="@drawable/ic_next"
            android:paddingRight="15dp"
            android:textStyle="bold"
            android:gravity="right"
            android:textSize="16sp"
            android:textColor="#E6E6E6"
            android:text="Next"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>